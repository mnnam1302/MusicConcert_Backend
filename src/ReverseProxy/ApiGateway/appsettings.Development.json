{
  "ReverseProxy": {
    "Routes": {
      "identityApiRoute": {
        "ClusterId": "IdentityCluster",
        "Match": {
          "Path": "identity-api/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      },
      "catalogApiRoute": {
        //"AuthorizationPolicy": "authPolicy",
        "ClusterId": "CatalogCluster",
        "Match": {
          "Path": "catalog-api/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      },
      "orderApiRoute": {
        //"AuthorizationPolicy": "authPolicy",
        "ClusterId": "OrderCluster",
        "Match": {
          "Path": "order-api/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      },
      "paymentApiRoute": {
        //"AuthorizationPolicy": "authPolicy",
        "ClusterId": "PaymentCluster",
        "Match": {
          "Path": "payment-api/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "IdentityCluster": {
        "Destinations": {
          "Destination1": {
            "Address": "http://localhost:2000"
          }
        }
      },
      "CatalogCluster": {
        "Destinations": {
          "Destination1": {
            "Address": "http://localhost:2020"
          }
        }
      },
      "OrderCluster": {
        "Destinations": {
          "Destination1": {
            "Address": "http://localhost:2040"
          }
        }
      },
      "PaymentCluster": {
        "Destinations": {
          "Destination1": {
            "Address": "http://localhost:2060"
          }
        }
      }
    }
  }
}
